{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "resolveJsonModule": true,
    "lib": [
      "dom", "es6"
    ],
    "types": [
      "@types/chai",
      "@types/mocha",
      "@types/node",
      "@types/async",
      "@types/glob",
      "./src/typings"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "moduleResolution": "umd",
  "exclude": [
    "./node_modules"
  ],
  "skipLibCheck": true,
  "sourceMap": true
}
